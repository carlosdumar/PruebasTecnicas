@import './normalize.css'
@import './reset'
@import './header.styl'
@import './content.styl'

@font-face
  font-family 'HUGE'
  src url('../fonts/GalaxieCopernicus-Book.eot'),
      url('../fonts/GalaxieCopernicus-BookItalic.eot'),
      url('../fonts/huge_agb_v5-webfont.eot')
  src url('../fonts/GalaxieCopernicus-Book.eot?#iefix') format('embedded-opentype'),
      url('../fonts/GalaxieCopernicus-Book.woff') format('woff'),
      url('../fonts/huge_agb_v5-webfont.ttf') format('truetype'),
      url('../fonts/GalaxieCopernicus-Book.svg#icomoon') format('svg'),
      url('../fonts/GalaxieCopernicus-BookItalic.svg#icomoon') format('svg'),
      url('../fonts/huge_agb_v5-webfont.svg#icomoon') format('svg')
  font-weight normal
  font-style normal

  /* Better Font Rendering =========== */
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

body
  font-size 16px
